<div class="mt-10 rounded overflow-hidden shadow-lg container mx-auto">
  <div class="py-12 px-4 sm:px-6 lg:px-8">
    <% if @post.main_image.attached? %>
      <div class="w-6/12 sm:w-4/12">
        <img src="<%=(url_for(@post.main_image.variant(resize: '100x100')))%>" class="shadow rounded-full max-w-full h-auto align-middle border-none" />
      </div>
    <% end %>
    <div class="min-w-0">
      <h2 class="text-2xl font-bold leading-7 text-gray-500 sm:text-3xl sm:truncate">
        <%= @post.title %>
      </h2>
      <span class="h-min w-min whitespace-nowrap py-1 mt-2 bg-green-500 px-2 text-md rounded-full flex items-center text-sm text-white">
        <i class="fa fa-user mr-2" aria-hidden="true"></i>
        <%= full_name(@post.user) %>
      </span>
      <div class="mt-1 flex flex-col sm:flex-row sm:flex-wrap sm:mt-0 sm:space-x-6">
        <% if @post.published_at.present? %>
          <div class="mt-2 flex items-center text-sm text-gray-500">
            <i class="fa fa-calendar mr-2" aria-hidden="true"></i>
            <%= t('.published_at', time: @post.published_at&.to_s(:db)) %>
          </div>
        <% end %>
        <% if @post.tags.present? %>
          <div class="mt-2 flex items-center text-sm text-gray-500">
            <i class="fa fa-tag mr-2" aria-hidden="true"></i>
            <%= tag_list(post) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="overflow-hidden">
    <h3 class="px-7 text-lg leading-6 font-medium text-gray-600">
      <%= t('.description') %>
    </h3>
    <div class="px-7 py-5">
      <%= @post.description %>
    </div>
  </div>
</div>
